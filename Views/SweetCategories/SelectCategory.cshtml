@model IEnumerable<OnlineSweetShop.Models.SweetCategory>

@{
    ViewData["Title"] = "SelectCategory";
}

<h1>SelectCategory</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.photopath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.photopath)
            </td>
            <td>
                    <a asp-controller="SweetProducts" asp-action="ProductList" asp-route-id="@item.id">Product List</a>
            </td>
        </tr>
}
    </tbody>
</table>
